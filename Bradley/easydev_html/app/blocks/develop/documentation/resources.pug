include ./components/documentation-nav
include ./components/documentation-nav-bottom
mixin documentation-resources()
  .documentation__main.row
    +documentation-nav
    .col-12.col-sm-12.col-md-12.col-lg-9.col-xl-9
      .card--not-full-height.card
        .card-body
          .card__title
            h5.bold-text="Main"
          ul
            li
              a(href="https://pugjs.org/api/getting-started.html")="Pug"
            li
              a(href="https://getbootstrap.com/docs/4.0/getting-started/introduction/")="Bootstrap 4"
          .card__title
            h5.bold-text="FONTS AND ICONS"
          ul
            li
              a(href="https://fonts.google.com/specimen/Roboto")="Roboto from Google Font"
            li
              a(href="https://materialdesignicons.com")="Material Design Icons"
          .card__title
            h5.bold-text="Styles"
          ul
            li
              a(href="https://sass-lang.com/")="Sass"
          .card__title
            h5.bold-text="Form"
          ul
            li
              a(href="https://material-ui-next.com/")="Material-UI"
            li
              a(href="https://github.com/Simonwep/pickr")="Color picker"
            li
              a(href="https://jqueryui.com/datepicker/")="Date picker"
            li
              a(href="https://www.dropzonejs.com/")="Dropzone"
          .card__title
            h5.bold-text="COMPONENTS"
          ul
            li
              a(href="https://kenwheeler.github.io/slick/")="Slick"
            li
              a(href="https://www.tiny.cloud/docs/")="Text editor"
            li
              a(href="https://fullcalendar.io/")="Calendar"
  +documentation-nav-bottom({path: 'documentation/navigation', title: 'Navigation'}, {path: 'documentation/changelog', title: 'Changelog'})
