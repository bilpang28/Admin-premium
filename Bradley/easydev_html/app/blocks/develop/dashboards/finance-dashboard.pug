                  ['Stellar', '$ 131 131 454 444', '$ 6 432,23', '$ 6 432 323 455', '$ 6 432 323 xlm', '0,59%', {type: 'echartjs', values: ['finance-dashboard-top-10--8', null, '36px']}, {type: 'dropdown'}],
                  ['IOTA', '$ 131 131 454 444', '$ 6 432,23', '$ 6 432 323 455', '$ 6 432 323 iota', '0,59%', {type: 'echartjs', values: ['finance-dashboard-top-10--9', null, '36px']}, {type: 'dropdown'}],
                  ['NEO', '$ 131 131 454 444', '$ 6 432,23', '$ 6 432 323 455', '$ 6 432 323 neo', '0,59%', {type: 'echartjs', values: ['finance-dashboard-top-10--10', null, '36px']}, {type: 'dropdown'}],
                ]
              }, '/htmleasydev/dashboards/edit', false
