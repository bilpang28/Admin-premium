extends ../../blocks/layout
block layout
  - var active_page = 'default_pages_faq'

block content
  .container.todo-app
    .row
      .col-md-12
        h3.page-title='Project Summary'
        h3.page-subhead.subhead='Use this elements, if you want to show some hints or additional information'
    .row
      .col-md-12.col-lg-12.col-xl-8
        .card
          .card-body
            +project-summary()
      .col-md-12.col-lg-12.col-xl-4
        .card--not-full-height.card
          .card-body
            .card__title
              h5.bold-text='project team'
            +project-member('static/topbar/img/11.png', 'Peter Jackson', 'IOS Developer')
            +project-member('static/topbar/img/12.png', 'Lora Melbourn', 'Android Developer')
            +project-member('static/topbar/img/14.png', 'Cat Mew', 'Project Manager')
            +project-member('static/topbar/img/15.png', 'Liza Orly', 'Developer')
            +project-member('static/topbar/img/photo_notification.png', 'Michael Bro', 'Designer')
