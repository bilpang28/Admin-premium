extends ../../blocks/layout
block layout
  - var active_page = 'default_pages_calendar'

block content
  .container.todo-app
    .row
      .col-md-12
        h3.page-title='Calendar'
        h3.page-subhead.subhead='Use this elements, if you want to show some hints or additional information'
    .row
      .col-md-12.col-lg-12.col-xl-9
        .card.cart
          .card-body
            +calendar()

      .col-md-12.col-lg-12.col-xl-3
        .card.cart.card--not-full-height
          .card-body
            .card__title
              h5.bold-text="event labels"
            p
              span.calendar-label.calendar-label--red 
              ="High Priority events"
            p
              span.calendar-label.calendar-label--green
              ="Family events"
            p
              span.calendar-label.calendar-label--blue
              ="Non-priority events"
            .btn-toolbar
              .btn-group.btn-group--justified
                +btn('btn-primary', type="button")='Create new event'
