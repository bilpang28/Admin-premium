mixin register(classes)
  div(class=`account log-in ${classes || ""}`)
    .account__wrapper
      .account__card
        .account__head
          h3.account__title='Welcome to '
            span.account__logo='Easy'
              span.account__logo-accent='DEV'
          h4.account__subhead.subhead='Create an account'
        form.form
          .form__form-group
            span.form__form-group-label='Username'
            div.form__form-group-field
              .form__form-group-icon
                +icon('form', 'account-outline')(width=24, height=24)
              input(placeholder='Name', type='text')
          .form__form-group
            span.form__form-group-label='Email'
            div.form__form-group-field
              .form__form-group-icon
                +icon('form', 'mail-ru')(width=24, height=24)
              input(placeholder='example@mail.com', type='text')
          .form__form-group
            span.form__form-group-label='Password'
            div.form__form-group-field
              .form__form-group-icon
                +icon('form', 'key-variant')(width=24, height=24)
              input(placeholder='Password', type='password')
              button.form__form-group-button.passwordClick
                +icon('form', 'eye')(width=24, height=24)
            .account__forgot-password
              a(href='/')='Forgot a password?'
          .form__form-group
            div.form__form-group-field
              +check-box('checkbox-btn')
                = 'Remember me'
          .account__btns
            a.btn.btn-primary.account__btn(href="dashboards/online_marketing_dashboard")='Sign Up'
        .account__have-account
          p='Already have an account? '
            a(href='account/log_in')='Login'
