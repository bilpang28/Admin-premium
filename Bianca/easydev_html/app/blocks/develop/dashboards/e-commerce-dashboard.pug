mixin e-commerce-dashboard()
  .container
    .dashboards
      .row
        .col-md-12
          h3.page-title='E-commerce Dashboard'
      .row
        .col-12.col-md-12.col-lg-6.col-xl-3
          .card
            .dashboard__card-widget.card-body
              .card__title
                h5.bold-text='TOTAL PRODUCTS'
              .dashboard__total
                +icon('dashboards', 'trending-up')(class='dashboard__trend-icon', width=24, height=24)
                p.dashboard__total-stat
                .dashboard__chart-container
                  +chartjs('online-marketing-dashboard-visits')(style="max-height: 50px;")
        .col-12.col-md-12.col-lg-6.col-xl-3
          .card
            .dashboard__card-widget.card-body
              .card__title
                h5.bold-text='TOTAL PROFIT'
              .dashboard__total
                +icon('dashboards', 'trending-up')(class='dashboard__trend-icon', width=24, height=24)
                p.dashboard__total-stat
                .dashboard__chart-container
                  +chartjs('e-commerce-dashboard-total-profit')(style="max-height: 50px;")
        .col-12.col-md-12.col-lg-6.col-xl-3
          .card
            .dashboard__card-widget.card-body
              .card__title
                h5.bold-text='ORDERS TODAY'
              .dashboard__total
                +icon('dashboards', 'trending-down')(class='dashboard__trend-icon', width=24, height=24)
                p.dashboard__total-stat
                .dashboard__chart-container
                  +chartjs('online-marketing-dashboard-new-users')(style="max-height: 50px;")
        .col-12.col-md-12.col-lg-6.col-xl-3
          .card
            .dashboard__card-widget.card-body
              .card__title
                h5.bold-text='SUBSCRIPTIONS'
              .dashboard__total
                +icon('dashboards', 'trending-up')(class='dashboard__trend-icon', width=24, height=24)
                p.dashboard__total-stat
                .dashboard__chart-container
                  +chartjs('e-commerce-dashboard-subscriptions')(style="max-height: 50px;")
      .row
        .col-md-12.col-lg-12.col-xl-12
          +panel('PRODUCT SALES', 'e-commerrce-product-sales').card
            +echartjs('online-marketing-dashboard-analytics')
        .col-12.col-md-12.col-lg-6.col-xl-3
          +panel(null, 'e-commerce-panel').card
            .dashboard__product
              .dashboard__product-img
                img(src='static/topbar/img/for_store/dog/1.png' alt="1")
              h5.bold-text.dashboard__product-title="BASIC CARD"
              h5.subhead.dashboard__product-subhead="Knowledge nay estimable questions repulsive daughters boy."
              p
                a(href="ecommerce/catalog")="View in the item list"
        .col-12.col-md-12.col-lg-6.col-xl-3
          +panel('SALES STATISTIC', 'e-commerce-salles', 'Top selling items statistic by last month').card
            .dashboard__stat
              .dashboard__stat-chart
                +echartjs('online-marketing-dashboard-sales-statistic-1', null, '120px')
                p(style="color: rgb(76, 225, 182);").dashboard__stat-label="80%"
              .dashboard__stat-info
                p="Top selling items statistic by last month"
                h4.dashboard__-stat-number="$23,747.00"
            .dashboard__stat
              .dashboard__stat-chart
                +echartjs('online-marketing-dashboard-sales-statistic-2', null, '120px')
                p.dashboard__stat-label="50%"
              .dashboard__stat-info
                p="Top selling items statistic by last  month"
                h4.dashboard__-stat-number="$23,747.00"
        .col-md-12.col-lg-6.col-xl-3
          +panel('MY TODOS', null, 'Do not forget to do everything').card
            div.dashboard__commerce_todo
              +check-box('checkbox-btn todo__checkbox', '1')='Call to Margaret and tell about EasyDEV'
              +check-box('checkbox-btn todo__checkbox', '2')='Prepare docs for boss'
              +check-box('checkbox-btn todo__checkbox', '3')='Calculate the company budget'
              +check-box('checkbox-btn todo__checkbox', '4')='Find a manager'
              +check-box('checkbox-btn todo__checkbox', '5')='Call to Sarah'
              +check-box('checkbox-btn todo__checkbox', '6')='Make a sandwich'
              +check-box('checkbox-btn todo__checkbox', '7')='Drink a coffee'
              +check-box('checkbox-btn todo__checkbox', '8')='Walk with my dog'
              +check-box('checkbox-btn todo__checkbox', '9')='Buy some milk, bread and a new car'
        .col-12.col-md-12.col-lg-6.col-xl-3
          +panel('SALES STATISTIC', 'e-commerce-sales-statistic', 'See how effective your business is').card
              +echartjs('e-commerce-dashboard-sales-statistic-bar', null, '260px')
              hr
              label.toggle-btn.dashboard__sales-toggle(for="sales")
                input.toggle-btn__input(type="checkbox", name="sales" id="sales")
                span.dashboard__sales-toggle-left="Yearly"
                span.toggle-btn__input-label="Toggle"
                span.dashboard__sales-toggle-right="Monthly"

        .col-12.col-sm-12.col-md-12.col-lg-7.col-xl-5
          +panel('SALES REPORT', 'e-commerce-sales-report').card
            .dashboard__sales-report
              .progress-wrap.progress-wrap--small
                p.dashboard__sales-report-title="Today"
                p.dashboard__sales-report-now="$298,92"
                p.dashboard__sales-report-plan="$250 planned"
                p.dashboard__sales-report-value.progress__label="100%"
                +progress-bar('middle', null, null, 100)
              .progress-wrap.progress-wrap--small
                p.dashboard__sales-report-title="This week"
                p.dashboard__sales-report-now="$1423,01"
                p.dashboard__sales-report-plan="$1500 planned"
                p.dashboard__sales-report-value.progress__label="98%"
                +progress-bar('middle', null, 'red', 98)
              .progress-wrap.progress-wrap--small
