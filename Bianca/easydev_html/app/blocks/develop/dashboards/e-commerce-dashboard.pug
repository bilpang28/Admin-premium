                p.dashboard__sales-report-now="$44321,74"
                p.dashboard__sales-report-plan="$45000 planned"
                p.dashboard__sales-report-value.progress__label="100%"
                +progress-bar('middle', null, 'red', 87)
        .col-12.col-sm-12.col-md-12.col-lg-5.col-xl-3
